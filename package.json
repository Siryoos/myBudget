{
  "name": "smartsave-finance-platform",
  "version": "1.0.0",
  "description": "A comprehensive personal finance website designed to encourage saving behavior through psychological nudges and intuitive UI/UX",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:migrate": "tsx scripts/migrate-database.ts",
    "db:migrate:test": "tsx scripts/migrate-database.ts --test",
    "db:security-migrate": "tsx scripts/run-migrations.ts",
    "db:performance-migrate": "tsx scripts/run-performance-migration.ts",
    "bundle:analyze": "tsx scripts/analyze-bundle.ts",
    "bundle:optimize": "npm dedupe && npm run bundle:analyze",
    "dev:backend": "nodemon --exec tsx scripts/start-backend.ts",
    "build:backend": "tsc -p tsconfig.server.json",
    "quick-start": "./scripts/quick-start.sh",
    "test:api": "node scripts/test-api.js",
    "test:api:watch": "nodemon --exec 'node scripts/test-api.js'",
    "docker:setup": "./scripts/docker-setup.sh",
    "docker:start": "./scripts/docker-setup.sh start",
    "docker:stop": "./scripts/docker-setup.sh stop",
    "docker:restart": "./scripts/docker-setup.sh restart",
    "docker:logs": "./scripts/docker-setup.sh logs",
    "docker:status": "./scripts/docker-setup.sh status",
    "docker:cleanup": "./scripts/docker-setup.sh cleanup",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/lib",
    "test:components": "jest --testPathPattern=__tests__/components",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:smoke": "jest --testPathPattern=tests/smoke",
    "test:health": "jest --testPathPattern=tests/health",
    "test:security-verification": "jest --testPathPattern=tests/security-verification",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "audit": "npm audit",
    "security:validate": "npm run security:check && npm run security:audit",
    "performance:monitor": "tsx scripts/performance-monitor.ts",
    "performance:analyze": "tsx scripts/performance-analyze.ts",
    "audit:export": "tsx scripts/audit-export.ts",
    "audit:cleanup": "tsx scripts/audit-cleanup.ts",
    "mfa:setup": "tsx scripts/mfa-setup.ts",
    "mfa:verify": "tsx scripts/mfa-verify.ts",
    "monitor:metrics": "tsx scripts/monitor-metrics.ts",
    "generate:deployment-report": "tsx scripts/generate-deployment-report.ts",
    "ci:setup": "npm ci && npm run lint && npm run type-check && npm run test:unit",
    "ci:full": "npm run ci:setup && npm run test:integration && npm run test:security && npm run build",
    "prepare": "husky install",
    "prebuild": "npm run security:check",
    "prestart": "npm run security:check"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@hookform/resolvers": "^3.3.0",
    "@sentry/nextjs": "^10.5.0",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "date-fns": "^2.30.0",
    "dotenv": "^16.6.1",
    "express-rate-limit": "^7.1.5",
    "framer-motion": "^10.16.0",
    "helmet": "^7.1.0",
    "i18next": "^25.3.6",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "moment-hijri": "^3.0.0",
    "nodemailer": "^6.9.0",
    "moment-jalaali": "^0.10.4",
    "next": "^14.0.0",
    "next-i18next": "^15.4.2",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-i18next": "^15.6.1",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^8.10.7",
    "@types/react-i18next": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}

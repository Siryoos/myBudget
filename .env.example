# Database
DATABASE_URL=postgresql://username:password@localhost:5432/smartsave

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Cloud Storage Configuration
# Choose one provider: aws-s3, cloudinary, azure-blob, google-cloud
STORAGE_PROVIDER=aws-s3

# AWS S3 Configuration (if using aws-s3)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=smartsave-uploads
AWS_REGION=us-east-1

# Cloudinary Configuration (if using cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# API Keys
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Error Tracking
SENTRY_DSN=your-sentry-dsn

# Email Service
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@smartsave.com

# Feature Flags
ENABLE_SOCIAL_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_FILE_UPLOADS=true